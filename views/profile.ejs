<%- include('partials/head.ejs') %>

<div>
  <body class="bg-[#735d78]">
    <div class="md:flex mt-10 max-w-4xl mx-auto gap-6">
      <div class="md:w-1/4 md:p-4 mx-4">
        <!-- Left Side -->
        <div class="bg-[#ebdee5] shadow-md rounded-md p-4 mb-5">
          <h2 class="text-[#333] text-center text-3xl font-semibold mb-3">
            Navigation
          </h2>
          <a class="flex gap-3 py-3 text-xl" href="playfeed">Playfeed</a>
          <a class="flex gap-3 py-3 text-xl" href="friends">Friends</a>
          <a class="flex gap-3 py-3 text-xl" href="logout">Logout</a>
        </div>
      </div>
      <!--Right Side-->

      <div class="md:w-3/4 mx-4">
        <!-- Cover Photo -->
        <div class="bg-[#ebdee5] shadow-md rounded-md mb-5 overflow-hidden">
          <div class="relative">
            <div class="h-36 overflow-hidden flex justify-center items-center">
              <img
                src="https://images.unsplash.com/photo-1471922694854-ff1b63b20054?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8YmVhY2h8ZW58MHwwfDB8fA%3D%3D&auto=format&fit=crop&w=700&q=60"
                alt="beach photo"
              />
            </div>
            <!--Avatar-->
            <div class="absolute top-12 left-4">
              <div class="md:w-36 w-24 rounded-full overflow-hidden">
                <img
                  src="https://images.unsplash.com/photo-1623852881187-a3790f3b29ae?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NHx8YmxhY2slMjB3b21hbnxlbnwwfDJ8MHx8&auto=format&fit=crop&w=600&q=60"
                  alt="avatar"
                />
              </div>
            </div>
            <div class="p-4 pb-4">
              <div class="ml-24 md:ml-40">
                <h1 class="text-3xl font-bold">Lupita</h1>
                <div class="text-[#005458] font-bold leading-4">
                  Burbank, CA
                </div>
              </div>
            </div>
          </div>
        </div>

        <!--Create Posts-->
        <div class="md:w-3/4 mx-1">
            <!-- New PlayDate Post-->
            <div class="bg-[#ebdee5] shadow-md rounded-md p-4 mb-5">
                <div>
                    <form class="w-full max-w-lg" action="/post/createPost" enctype="multipart/form-data" method="POST">
                        <div class="flex flex-wrap gap-2">
                            <div class="w-full px-3">
                                <div class="w-12 rounded-full overflow-hidden">
                                    <img src='https://images.unsplash.com/photo-1623852881187-a3790f3b29ae?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NHx8YmxhY2slMjB3b21hbnxlbnwwfDJ8MHx8&auto=format&fit=crop&w=600&q=60' alt="avatar">
                                </div>
                                <label class="form-control block tracking-wide font-bold mb-2" for="caption"></label>
                                <input type="text" class="appearance-none block w-full py-3 px-4 mb-3 leading-tight rounded-md" id="caption" name="caption" placeholder="Enter your playdate info">
                                <label class="form-control block tracking-wide font-bold mb-2" for="location"></label>
                                <input type="text" class="appearance-none block w-full py-3 px-4 mb-3 leading-tight rounded-md" id="location" name="location" placeholder="Where?">
                                <label class="form-control block tracking-wide font-bold mb-2" for="friends"></label>
                                <input type="text" class="appearance-none block w-full py-3 px-4 mb-3 leading-tight rounded-md" id="friends" name="friends" placeholder="Which friends?">
                                <label class="form-control block tracking-wide font-bold mb-2" for="grownups"></label>
                                <input type="text" class="appearance-none block w-full py-3 px-4 mb-3 leading-tight rounded-md" id="grownups" name="grownups" placeholder="Which grownups?">
                                
                                
                                <p class="text-lg font-semibold text-[#333]">Any pictures to share?</p>
                                <label class="block tracking-wide font-bold mb-2" for="imgUpload"></label>
                                <input type="file" class="appearance-none block w-full py-3 px-4 mb-3 leading-tight rounded-md" id="imageUpload" name="file">
                            </div>
                            <!-- <textarea class="grow p-3 h-14 rounded-md" placeholder="Enter your playdate information here."></textarea> -->
                        </div>
                        <div class="flex items-center">
                            <div class="grow text-right mt-3">
                                <a href="/playfeed">
                                <button type="submit" value="Upload" class="bg-[#1b8481] text-white px-6 py-1 rounded-md">Share</button>
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!--Feed-->
            <div class="mt-5 w-full mx-auto">
                <ul class="flex w-full flex-col my-10 lg:grid lg:grid-cols-3 lg:gap-4">
                    <% for(var i=0; i<posts.length; i++) {%>
                    <li class="my-3">
                        <a href="/post/<%= posts[i]._id%>">
                        </a>
                    </li>
                   <% } %>
                </ul>
            </div>
        </div>
      </div>
    </div>
  </body>
</div>

<%- include('partials/footer.ejs') %>
